{
    "name": "catpaw/starter",
    "type": "project",
    "description": "A php CatPaw starter template",
    "homepage": "https://github.com/tncrazvan/catpaw-starter",
    "license": "MIT",
    "scripts": {
        "load": "XDEBUG_MODE=off composer dump-autoload -o",
        "fix": [
            "XDEBUG_MODE=off php ./vendor/bin/php-cs-fixer fix src",
            "XDEBUG_MODE=off php ./vendor/bin/php-cs-fixer fix tests"
        ],
        "action:test": [
            "XDEBUG_MODE=off php vendor/bin/phpunit tests/TestSuiteParser.php"
        ],
        "test": [
            "XDEBUG_MODE=debug php vendor/bin/phpunit tests/TestSuiteParser.php"
        ]
    },
    "authors": [
        {
            "name": "Razvan Tanase",
            "email": "tangent.jotey@gmail.com",
            "homepage": "https://github.com/tncrazvan",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/lib/"
        },
        "files": [ "src/functions.php", "src/syntax.php" ]
    },
    "require": {
        "php": "^8.1",
        "catpaw/core": "^0.4",
        "amphp/amp": "^2.6",
        "amphp/file": "^2.0",
        "catpaw/store": "^0.4.98"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "phpunit/phpunit": "^9",
        "vimeo/psalm": "^4.23",
        "overtrue/phplint": "^5.3"
    },
    "config": {
        "preferred-install": "dist",
        "process-timeout": 0
    }
}
